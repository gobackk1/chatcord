{
  "moduleFileExtensions": ["js", "json", "vue", "ts"],
  "transform": {
    ".*\\.(vue)$": "vue-jest",
    "^.+\\.tsx?$": "ts-jest",
    "^.+\\.js$": "babel-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "testMatch": ["**/__tests__/**/*.[jt]s?(x)", "**/?(*.)+(spec|test).[jt]s?(x)"],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "./src/**/*.{js,vue}",
    "!**/node_modules/**",
    "!./src/**/*.(stories|test|spec).js",
    "!src/**/*.d.ts"
  ],
  "coverageProvider": "v8",
  "setupFilesAfterEnv": ["./test/jest.setup.js"]
}
